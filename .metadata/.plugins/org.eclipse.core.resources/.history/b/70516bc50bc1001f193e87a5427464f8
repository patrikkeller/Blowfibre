	private JTextField text1;
	private JTextField text2;
	
	public List<Raum> raumDB; 
	private List<Connection> connDB;
	
	//public dataBase db;

	public raumGui(){
		createFrame();
		// db = new dataBase();
		raumDB = new ArrayList<Raum>();
		connDB = new ArrayList<Connection>();
	}
	
	public void createFrame(){
